@model Sakanatcom.ViewModels.MasterItemMenuViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutP.cshtml";
}

<br />
<br />
<br />
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 style="text-align:center;color:red;" class="card-title">*Your Post Will be Reviewd By The Admin Then It Will Be Published or Removed </h5>
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="row mb-3 d-flex justify-content-center">
                            <div class="col-sm-12 text-center">
                                <label asp-for="UploadImage" class="col-sm-12 text-center col-form-label">
                                    <img asp-for="UploadImage" id="MasterItemMenuImg" src="~/Admin/assets/img/not-found.svg" class="img img-fluid border border-2 border-dark rounded-3 p-5" width="300" />
                                </label>
                                <input asp-for="UploadImage" hidden onchange="loadFile(event,'#MasterItemMenuImg')" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="UploadImage" class="col-sm-12 text-center col-form-label"></label>
                        </div>
                        <div class="row mb-3 d-flex justify-content-center">
                            <div class="col-sm-12 text-center">
                                <label asp-for="UploadImage2" class="col-sm-12 text-center col-form-label">
                                    <img asp-for="UploadImage2" id="MasterItemMenuImg2" src="~/Admin/assets/img/not-found.svg" class="img img-fluid border border-2 border-dark rounded-3 p-5" width="300" />
                                </label>
                                <input asp-for="UploadImage2" hidden onchange="loadFile(event,'#MasterItemMenuImg2')" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="UploadImage2" class="col-sm-12 text-center col-form-label"></label>
                        </div>
                         <div class="row mb-3 d-flex justify-content-center">
                            <div class="col-sm-12 text-center">
                                <label asp-for="UploadImage3" class="col-sm-12 text-center col-form-label">
                                    <img asp-for="UploadImage3" id="MasterItemMenuImg3" src="~/Admin/assets/img/not-found.svg" class="img img-fluid border border-2 border-dark rounded-3 p-5" width="300" />
                                </label>
                                <input asp-for="UploadImage3" hidden onchange="loadFile(event,'#MasterItemMenuImg3')" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="UploadImage3" class="col-sm-12 text-center col-form-label"></label>
                        </div>
                         <div class="row mb-3 d-flex justify-content-center">
                            <div class="col-sm-12 text-center">
                                <label asp-for="UploadImage4" class="col-sm-12 text-center col-form-label">
                                    <img asp-for="UploadImage4" id="MasterItemMenuImg4" src="~/Admin/assets/img/not-found.svg" class="img img-fluid border border-2 border-dark rounded-3 p-5" width="300" />
                                </label>
                                <input asp-for="UploadImage4" hidden onchange="loadFile(event,'#MasterItemMenuImg4')" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="UploadImage4" class="col-sm-12 text-center col-form-label"></label>
                        </div>
                        <div class="row mb-3">
                          
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterCategoryMenuId" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <select asp-for="MasterCategoryMenuId" class="form-control" asp-items="@(new SelectList(ViewBag.MasterCategoryMenuList,"MasterCategoryMenuId","MasterCategoryMenuName"))"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuTitle" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="MasterItemMenuTitle" class="form-control" />
                                        <span asp-validation-for="MasterItemMenuTitle" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuName" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="MasterItemMenuName" class="form-control" />
                                        <span asp-validation-for="MasterItemMenuName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuBreif" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <textarea asp-for="MasterItemMenuBreif" class="form-control"></textarea>
                                        <span asp-validation-for="MasterItemMenuBreif" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuDesc" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <textarea asp-for="MasterItemMenuDesc" class="form-control"></textarea>
                                        <span asp-validation-for="MasterItemMenuDesc" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuPrice" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="number" asp-for="MasterItemMenuPrice" class="form-control" />
                                        <span asp-validation-for="MasterItemMenuPrice" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuDate" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="date" asp-for="MasterItemMenuDate" class="form-control" />
                                        <span asp-validation-for="MasterItemMenuDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuPhone" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="MasterItemMenuPhone" class="form-control" />
                                        <span asp-validation-for="MasterItemMenuPhone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuEmail" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="MasterItemMenuEmail" class="form-control" value="@User.Identity.Name" readonly />
                                        <span asp-validation-for="MasterItemMenuEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                             <div class="row mb-3">
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuAddress" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="MasterItemMenuAddress" class="form-control" />
                                        <span asp-validation-for="MasterItemMenuAddress" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row mb-3">
                                    <label asp-for="MasterItemMenuCapicity" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input type="number" asp-for="MasterItemMenuCapicity" class="form-control" />
                                        <span asp-validation-for="MasterItemMenuCapicity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="row mb-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-12 d-inline-flex justify-content-end">
                                <a asp-action="Index" class="btn btn-success btn-backtolist">Back to List</a>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
